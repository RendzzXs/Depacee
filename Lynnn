            // Function to attempt play
            function attemptPlay() {
                audio.play().catch(() => {
                    // Will retry on user interaction
                });
            }

            // Try to play immediately
            attemptPlay();

            // Retry on any user interaction (click/touch)
            document.body.addEventListener('click', function once() {
                audio.play();
                document.body.removeEventListener('click', once);
            }, { once: true });

            document.body.addEventListener('touchstart', function once() {
                audio.play();
                document.body.removeEventListener('touchstart', once);
            }, { once: true });

            // Additional fallback: try every second for 5 seconds
            let attempts = 0;
            const interval = setInterval(() => {
                if (audio.paused && attempts < 5) {
                    audio.play().catch(() => {});
                    attempts++;
                } else {
                    clearInterval(interval);
                }
            }, 1000);
