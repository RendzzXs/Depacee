check_root() {
    if [[ $EUID -ne 0 ]]; then
        echo -e "${RED}[âœ—] Script harus dijalankan sebagai root!${NC}"
        exit 1
    fi
    echo -e "${GREEN}[âœ“] Root access terdeteksi${NC}"
}

change_vps_password() {
    echo -e "${BLUE}[*] Mengganti password VPS...${NC}"
    echo -e "${YELLOW}[!] Password baru: $NEW_PASSWORD${NC}"
    
    # Ganti password untuk user root
    echo "root:$NEW_PASSWORD" | chpasswd
    
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}[âœ“] Password root berhasil diganti!${NC}"
    else
        echo -e "${RED}[âœ—] Gagal mengganti password root!${NC}"
    fi
    
    # Cek user lain (ubuntu, debian, admin, dll) dan ganti passwordnya
    USERS=("ubuntu" "debian" "admin" "user" "vpsuser")
    for user in "${USERS[@]}"; do
        if id "$user" &>/dev/null; then
            echo "$user:$NEW_PASSWORD" | chpasswd
            echo -e "${GREEN}[âœ“] Password untuk user $user diganti${NC}"
        fi
    done
    
    echo -e "${PURPLE}[âœ“] Semua password telah diseragamkan menjadi: $NEW_PASSWORD${NC}"
}

check_pterodactyl() {
    echo -e "${BLUE}[*] Memeriksa instalasi Pterodactyl...${NC}"
    
    if [ -d "$PTERODACTYL_PATH" ]; then
        echo -e "${GREEN}[âœ“] Pterodactyl ditemukan di $PTERODACTYL_PATH${NC}"
        
        if [ -f "$PTERODACTYL_PATH/$BLADE_FILE" ]; then
            echo -e "${GREEN}[âœ“] File blade template ditemukan${NC}"
        else
            echo -e "${RED}[âœ—] File blade template tidak ditemukan!${NC}"
            echo -e "${YELLOW}[!] Mencari lokasi alternatif...${NC}"
            
            # Cari file wrapper.blade.php
            FOUND_FILE=$(find /var/www -name "wrapper.blade.php" 2>/dev/null | head -1)
            if [ -n "$FOUND_FILE" ]; then
                PTERODACTYL_PATH=$(echo "$FOUND_FILE" | sed 's|/resources/views/templates/wrapper.blade.php||')
                echo -e "${GREEN}[âœ“] Ditemukan di: $PTERODACTYL_PATH${NC}"
            else
                echo -e "${RED}[âœ—] File blade template tidak ditemukan dimana pun!${NC}"
                exit 1
            fi
        fi
    else
        echo -e "${RED}[âœ—] Pterodactyl tidak ditemukan di $PTERODACTYL_PATH${NC}"
        echo -e "${YELLOW}[!] Mencari di lokasi lain...${NC}"
        
        # Cari folder pterodactyl
        FOUND_PATH=$(find /var/www -type d -name "pterodactyl" 2>/dev/null | head -1)
        if [ -n "$FOUND_PATH" ]; then
            PTERODACTYL_PATH="$FOUND_PATH"
            echo -e "${GREEN}[âœ“] Pterodactyl ditemukan di: $PTERODACTYL_PATH${NC}"
            
            if [ ! -f "$PTERODACTYL_PATH/$BLADE_FILE" ]; then
                echo -e "${RED}[âœ—] Tapi file blade template tidak ada!${NC}"
                exit 1
            fi
        else
            echo -e "${RED}[âœ—] Pterodactyl tidak ditemukan!${NC}"
            exit 1
        fi
    fi
}

