backup_blade() {
    echo -e "${BLUE}[*] Membackup file asli...${NC}"
    
    BLADE_FULL="$PTERODACTYL_PATH/$BLADE_FILE"
    BACKUP_FULL="$PTERODACTYL_PATH/$BACKUP_FILE"
    
    cp "$BLADE_FULL" "$BACKUP_FULL"
    
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}[âœ“] Backup berhasil disimpan di: $BACKUP_FULL${NC}"
    else
        echo -e "${RED}[âœ—] Gagal membuat backup!${NC}"
        exit 1
    fi
}

replace_blade() {
    echo -e "${BLUE}[*] Mengganti file blade dengan HTML premium...${NC}"
    
    BLADE_FULL="$PTERODACTYL_PATH/$BLADE_FILE"
    
    # Backup dulu
    backup_blade
    
    # Tulis HTML ke file blade
    cat "$TEMP_HTML" > "$BLADE_FULL"
    
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}[âœ“] File blade berhasil diganti!${NC}"
    else
        echo -e "${RED}[âœ—] Gagal mengganti file blade!${NC}"
        exit 1
    fi
}

clear_cache() {
    echo -e "${BLUE}[*] Membersihkan cache Laravel...${NC}"
    
    if [ -f "$PTERODACTYL_PATH/artisan" ]; then
        cd "$PTERODACTYL_PATH"
        php artisan view:clear > /dev/null 2>&1
        php artisan cache:clear > /dev/null 2>&1
        php artisan config:clear > /dev/null 2>&1
        echo -e "${GREEN}[âœ“] Cache berhasil dibersihkan${NC}"
    else
        echo -e "${YELLOW}[!] File artisan tidak ditemukan, lewati pembersihan cache${NC}"
    fi
}

set_permissions() {
    echo -e "${BLUE}[*] Mengatur permissions...${NC}"
    
    chown -R www-data:www-data "$PTERODACTYL_PATH" 2>/dev/null
    chmod -R 755 "$PTERODACTYL_PATH" 2>/dev/null
    
    echo -e "${GREEN}[âœ“] Permissions diatur${NC}"
}

