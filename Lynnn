    echo -e "${BLUE}Untuk mengembalikan tampilan asli:${NC}"
    echo -e "${WHITE}cp $PTERODACTYL_PATH/$BACKUP_FILE $PTERODACTYL_PATH/$BLADE_FILE${NC}"
    echo -e "${WHITE}cd $PTERODACTYL_PATH && php artisan view:clear${NC}"
    echo ""
}

